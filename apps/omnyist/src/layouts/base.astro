---
import BaseHead from '@/components/base-head.astro'

import '../styles/global.css'

type SiteType = 'mind' | 'work' | 'play'

interface Props {
  title?: string
  description?: string
  image?: string
  activeSite?: SiteType
}

const { title, description = 'The mind of Bryan Veloso.', image, activeSite = 'mind' } = Astro.props

const defaultTitles = {
  mind: 'Avalonstar',
  work: 'Bryan Veloso',
  play: 'Omnyist'
}

const pageTitle = title || defaultTitles[activeSite]
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={description} image={image} />
  </head>
  <body class="h-dvh w-screen text-gray-900">
    <div class="relative grid w-screen grid-cols-1 gap-2 md:grid-cols-[48px_48px_1fr]">
      <!-- Mind (Avalonstar) -->
      <div class="relative hidden md:block">
        <div class="sticky top-0 p-2 pr-0">
          <a href={import.meta.env.DEV ? `http://localhost:5321` : 'https://avalonstar.com'}>
            <div class="flex h-[calc(100dvh-1rem)] justify-center rounded bg-amber-100">
              <div class="pt-4 text-xs uppercase" style={{ writingMode: 'vertical-rl' }}>
                <strong>mind</strong> &mdash; avalonstar
              </div>
            </div>
          </a>
        </div>
      </div>

      <!-- Work (Bryan Veloso) -->
      <div class="relative hidden md:block">
        <div class="sticky top-0 p-2 pl-0">
          <a href={import.meta.env.DEV ? `http://localhost:5322` : 'https://bryanvelo.so'}>
            <div class="flex h-[calc(100dvh-1rem)] justify-center rounded bg-amber-100">
              <div class="pt-4 text-xs uppercase" style={{ writingMode: 'vertical-rl' }}>
                <strong>work</strong> &mdash; bryanvelo.so
              </div>
            </div>
          </a>
        </div>
      </div>

      <!-- Play (Omnyist) -->
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <slot />
      </div>
    </div>
  </body>
</html>
