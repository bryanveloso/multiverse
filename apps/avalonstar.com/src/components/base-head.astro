---
import { ClientRouter } from 'astro:transitions'

interface Props {
  title: string
  description: string
  image?: string
  type?: 'website' | 'article'
  publishDate?: Date
  author?: string
  postId?: string // For generating OG images for blog posts
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const defaultImage = '/placeholder.png'

const { title, description, image = defaultImage, type = 'website', publishDate, author = 'Bryan Veloso', postId } = Astro.props

// Generate absolute URL for the image
// If it's a blog post and no custom image is provided, generate OG image
let absoluteImageUrl: string
if (type === 'article' && postId && image === defaultImage) {
  // Generate OG image URL for blog posts using Base64 encoding
  const encodedSlug = Buffer.from(postId).toString('base64url')
  const ogImagePath = `/og/${encodedSlug}.png`
  absoluteImageUrl = new URL(ogImagePath, Astro.site).toString()
} else {
  absoluteImageUrl = image.startsWith('http') ? image : new URL(image, Astro.site).toString()
}
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/png" href="/favicon.png" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="https://cdn.velo.so/fonts/optiker-k.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content={author} />
{publishDate && <meta name="date" content={publishDate.toISOString()} />}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={absoluteImageUrl} />
<meta property="og:image:alt" content={`Image for ${title}`} />
<meta property="og:site_name" content="Avalonstar" />
{publishDate && <meta property="article:published_time" content={publishDate.toISOString()} />}
{type === 'article' && <meta property="article:author" content={author} />}

<!-- Twitter Card -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={absoluteImageUrl} />
<meta property="twitter:creator" content="@bryanveloso" />
<meta property="twitter:site" content="@avalonstar" />

<!-- Additional SEO tags -->
<meta name="theme-color" content="#0d0a11" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="author" href="/humans.txt" />

<!-- Webmentions -->
<link rel="me" href="https://github.com/bryanveloso" />
<link rel="pingback" href="https://webmention.io/avalonstar.com/xmlrpc" />
<link rel="webmention" href="https://webmention.io/avalonstar.com/webmention" />

<!-- Plausible -->
<script defer is:inline data-domain="avalonstar.com" src="https://plausible.io/js/script.js"></script>

<!-- RSS Auto-Discovery -->
<link rel="alternate" type="application/rss+xml" title="Avalonstar" href={new URL('rss.xml', Astro.site)} />

<ClientRouter />
