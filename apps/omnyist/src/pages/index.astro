---
import Base from '@/layouts/base.astro';

import '../styles/global.css';
---

<Base title='omnyist' description='Welcome to Omnyist! This is where I share my gaming adventures and creative projects.'>
    <h1 class="text-3xl font-bold mb-6">Omnyist</h1>
    <p class="text-lg text-gray-700 mb-4">
      Welcome to Omnyist! This is where I share my gaming adventures and
      creative projects.
    </p>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="bg-white p-6 rounded-lg shadow-sm">
        <h2 class="text-xl font-semibold mb-2">Gaming</h2>
        <p class="text-gray-600">
          From MMORPGs to indie gems, I love exploring virtual worlds and
          sharing my experiences.
        </p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm">
        <h2 class="text-xl font-semibold mb-2">Streams</h2>
        <p class="text-gray-600">
          Join me for live streams where we can chat, play games, and have fun
          together.
        </p>
      </div>
    </div>
</Base>
