{
  "name": "multiverse",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "build:avalonstar.com": "turbo run build --filter=avalonstar.com",
    "build:bryanvelo.so": "turbo run build --filter=bryanvelo.so",
    "build:omnyist.com": "turbo run build --filter=omnyist.com",
    "dev:avalonstar.com": "turbo run dev --filter=avalonstar.com",
    "dev:bryanvelo.so": "turbo run dev --filter=bryanvelo.so",
    "dev:omnyist.com": "turbo run dev --filter=omnyist.com",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.910.0",
    "dotenv": "^17.2.3",
    "sharp": "^0.34.4"
  }
}
