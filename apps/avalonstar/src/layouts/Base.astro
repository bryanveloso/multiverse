---
import BaseHead from '../components/BaseHead.astro'
import '../styles/global.css'

type SiteType = 'mind' | 'work' | 'play'

interface Props {
  title?: string
  description?: string
  image?: string
  activeSite?: SiteType
}

const {
  title,
  description = 'The mind of Bryan Veloso.',
  image,
  activeSite = 'mind'
} = Astro.props

const defaultTitles = {
  mind: 'Avalonstar',
  work: 'Bryan Veloso',
  play: 'Omnyist'
}

const pageTitle = title || defaultTitles[activeSite]
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={description} image={image} />
  </head>
  <body class="text-gray-900 w-screen h-dvh">
    <div class="grid md:grid-cols-[1fr_48px_48px] w-screen relative">
      <!-- Mind (Avalonstar) -->
      <div class="">
        <div class="max-w-7xl mx-auto">
          <slot />
        </div>
      </div>

      <!-- Work (Bryan Veloso) -->
      <div class="relative hidden md:block">
        <div class="sticky top-0 p-2 pl-0">
          <a
            href={import.meta.env.DEV
              ? `http://localhost:5322`
              : 'https://bryanveloso.com'}
            class=""
          >
            <div class="bg-amber-100 h-[calc(100dvh-1rem)] rounded"><div class="pl-6 rotate-90 uppercase text-xs">bryanvelo.so</div></div>
          </a>
        </div>
      </div>

      <!-- Play (Omnyist) -->
      <div class="relative hidden md:block">
        <div class="sticky top-0 p-2 pl-0">
          <a
            href={import.meta.env.DEV
              ? `http://localhost:5323`
              : 'https://omnyist.com'}
          >
            <div class="bg-blue-100 h-[calc(100dvh-1rem)] rounded"><div class="pl-6 rotate-90 uppercase text-xs">omnyist</div></div>
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
